<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical"
    tools:context=".UnitDetailsActivity">

    <Button
        android:layout_width="match_parent"
        android:background="@color/white"
        android:onClick="cheat"
        android:visibility="gone"
        android:id="@+id/cheat"
        android:layout_height="wrap_content"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/round_corners"
        android:id="@+id/linearlayout"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="18sp"
            android:id="@+id/unitCode"
            android:fontFamily="@font/alegreya"
            android:textColor="#FFF"
            android:text="Unit name"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="16sp"
            android:id="@+id/unitName"
            android:fontFamily="@font/alegreya"
            android:textColor="#FFF"
            android:text="Unit Name"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/allowsignin"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:text="Get Current Location  and \n Allow students to check in"/>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/checkin"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:text="Check In for Lecturer"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tv"
        android:layout_height="wrap_content"
        android:text="Location"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#28D68B"
        android:id="@+id/fprintstatus"
        android:textAllCaps="false"
        android:layout_marginTop="20px"
        android:visibility="gone"
        android:text="Touch the fingerprint sensor"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#28D68B"
        android:id="@+id/update"
        android:visibility="gone"
        android:textAllCaps="false"
        android:layout_marginTop="20px"
        android:text=" Update Count"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#28D68B"
        android:visibility="gone"
        android:id="@+id/checkOveralAttendance"
        android:textAllCaps="false"
        android:layout_marginTop="20px"
        android:text=" Check Students Attendance"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1B2663"
        android:text="View student reports"
        android:onClick="reportsActivity"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:id="@+id/reports"
        android:fontFamily="@font/aclonica"
        android:textColor="@color/white"
        tools:ignore="OnClick" />
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1B2663"
        android:text="View unit reports"
        android:onClick="unitReportsActivity"
        android:visibility="gone"
        android:id="@+id/unitreport"
        android:fontFamily="@font/aclonica"
        android:textColor="@color/white"
        tools:ignore="OnClick" />




</LinearLayout>